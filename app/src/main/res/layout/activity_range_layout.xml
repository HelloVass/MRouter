<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="A"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_start_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="startNewActivity"
        android:text="start new activity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_finish_all_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="finishAll"
        android:text="finish all activity"
        android:textAllCaps="false"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_finish_all_activity_except_activity_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="finishAllExceptByClass"
        android:text="finish all activity except BActivity"
        android:textAllCaps="false"
        android:visibility="gone" />

</LinearLayout>